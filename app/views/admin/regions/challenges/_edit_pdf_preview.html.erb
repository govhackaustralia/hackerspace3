<%= form_for [:admin, @region, @challenge] do |form| %>
  <% if @challenge.pdf_preview.attached? %>
    <img alt="<%= @challenge.name %> pdf_preview" src="<%= url_for(@challenge.pdf_preview) %>"/>
    <br/>
  <% else %>
    <%= image_tag "default_profile_pic.png" %>
    <br/>
  <% end %>
  <%= form.label :pdf_preview, 'Upload a PDF Preview (only png/gif/jpeg/jpg)' %>
  <br/>
  <%= form.file_field :pdf_preview, accept: 'image/png,image/gif,image/jpeg' %>
  <br/>
  <%= hidden_field_tag(:pdf_preview, true) %>
  <% if @challenge.pdf_preview.attached? %>
    <%= form.submit 'Replace PDF Preview' %>
  <% else %>
    <%= form.submit 'Upload PDF Preview' %>
  <% end %>
<% end %>
